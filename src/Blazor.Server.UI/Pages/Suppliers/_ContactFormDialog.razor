@using CleanArchitecture.Blazor.Application.Features.Customers.Commands.AddEdit

@inherits MudComponentBase
@inject IStringLocalizer<BlazorShared.Models.SupplierDto> L

<MudDialog>
    <DialogContent>
        <MudForm Model="@model" @ref="@_form">
            <MudGrid>
                @*TODO: define mudform that should be edit fields, for example:*@
                <MudItem xs="12"> 
                        <MudTextField Label="Name" @bind-Value="model.FullName" For="@(() => model.FullName)" Required="true" RequiredError="@L["name is required!"]"></MudTextField>
                </MudItem> 
                <MudItem xs="12"> 
                        <MudTextField Label="Position" Lines="3" For="@(() => model.Position)" @bind-Value="model.Position"></MudTextField>
                </MudItem> 
                <MudItem xs="12"> 
                        <MudTextField Label="EmailAddress" @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" Required="false" RequiredError="@L["Id is required!"]"></MudTextField>
                </MudItem> 

            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@ButtonText.CANCEL</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit">@ButtonText.OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    MudForm? _form;
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;



    [EditorRequired][Parameter] public BlazorShared.Models.ContactDto model { get; set; } = null!;

    async Task Submit()
    {
        if(_form is not null) {
            await _form.Validate();
            if (_form.IsValid)
            {
                MudDialog.Close(DialogResult.Ok(true));
            }
        }
    }
    void Cancel() => MudDialog.Cancel();
}